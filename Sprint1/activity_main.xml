<?xml version="1.0" encoding="utf-8"?>
<com.sqlite.sqliteapp.Views.MenuFly
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C5C5C"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toggleMenu"
            android:text="ButtonMyAccount"
            android:height="30dp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toggleMenu"
            android:text="ButtonAddBook"
            android:height="40dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toggleMenu"
            android:text="ButtonSearchBooks"
            android:height="50dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toggleMenu"
            android:text="ButtonWishlist"
            android:height="20dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="logOut"
            android:text="ButtonLogOut"
            android:height="20dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center|left"
                android:background="#256eb8"
                android:padding="5dp"
                android:id="@+id/topsection">

                <ImageButton
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                    android:layout_weight="0"
                    android:background="#256eb8"
                    android:onClick="toggleMenu"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_weight="0.2"
                    android:layout_marginLeft="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="BOOKeGATOR"
                    android:id="@+id/Title"
                    android:layout_weight="0.06"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/middlesection"
                android:background="#DDDDDDDD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="My Details"
                    android:id="@+id/textView2"
                    android:padding="5dp"
                    android:textSize="22sp"
                    android:textColor="#1a1a1a" />
            </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:fillViewport="true">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomsection"
                android:background="#ffffe6">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:touchscreenBlocksFocus="true"
                    android:transitionGroup="false"
                    android:nestedScrollingEnabled="false"
                    android:focusableInTouchMode="true"
                    android:focusable="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ufid"
                        android:text="UFID - "
                        android:focusable="false"
                        android:elegantTextHeight="false"
                        android:textColor="#000000"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000" />
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:paddingTop="10sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:touchscreenBlocksFocus="true"
                    android:transitionGroup="false"
                    android:nestedScrollingEnabled="false"
                    android:focusableInTouchMode="true"
                    android:focusable="true">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords|textNoSuggestions"
                        android:ems="10"
                        android:id="@+id/name"
                        android:layout_weight="1"
                        android:textIsSelectable="false"
                        android:hint="Name*"
                        android:textColorHint="#4a4a4a"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:focusableInTouchMode="true"
                    android:focusable="true">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/phone"
                        android:layout_weight="1"
                        android:hint="Phone Number (###-#######)"
                        android:textColorHint="#4a4a4a"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:focusableInTouchMode="true"
                    android:focusable="true">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/email"
                        android:layout_weight="1"
                        android:hint="Email*"
                        android:textColorHint="#4a4a4a"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingTop="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10sp"
                    android:touchscreenBlocksFocus="true">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:ems="10"
                        android:id="@+id/address"
                        android:layout_weight="1"
                        android:hint="Address"
                        android:textColorHint="#4a4a4a"/>
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/submitbutton"
                    android:layout_gravity="center"
                    android:alpha="0.7" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.sqlite.sqliteapp.Views.MenuFly>