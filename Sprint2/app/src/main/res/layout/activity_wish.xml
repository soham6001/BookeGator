<?xml version="1.0" encoding="utf-8"?>
<com.sqlite.sqliteapp.Views.MenuFly
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C5C5C"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="viewAccount"
            android:text="My Account"
            android:height="60sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openBook"
            android:text="Add Book"
            android:height="60sp"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="searchBooks"
            android:text="Search Books"
            android:height="60sp"
            android:textSize="18sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toggleMenu"
            android:text="Wish Book"
            android:height="60sp"
            android:textSize="18sp" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="myBooks"
            android:text="My Books"
            android:height="60sp"
            android:textSize="18sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="logOut"
            android:text="Logout"
            android:height="60sp"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center|left"
            android:background="#256eb8"
            android:padding="5dp"
            android:id="@+id/topsection">

            <ImageButton
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton"
                android:src="@android:drawable/arrow_down_float"
                android:layout_weight="0"
                android:background="#256eb8"
                android:onClick="toggleMenu"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_weight="0.2"
                android:layout_marginLeft="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BOOKeGATOR"
                android:id="@+id/Title"
                android:layout_weight="0.06"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middlesection"
            android:background="#DDDDDDDD">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wish Books"
                android:id="@+id/textView2"
                android:padding="5dp"
                android:textSize="22sp"
                android:textColor="#1a1a1a" />
        </LinearLayout>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomsection"
            android:background="#ffffe6">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@android:id/list" />
        </LinearLayout>

    </LinearLayout>
</com.sqlite.sqliteapp.Views.MenuFly>